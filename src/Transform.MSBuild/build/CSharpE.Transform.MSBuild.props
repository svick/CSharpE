<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <CSharpEToolsRootPath Condition=" '$(CSharpEToolsRootPath)' == '' ">$(MSBuildThisFileDirectory)</CSharpEToolsRootPath>
    <CSharpEToolsSubPath Condition=" '$(MSBuildRuntimeType)' == 'Core' ">netcoreapp2.0\</CSharpEToolsSubPath>
    <CSharpEToolsSubPath Condition=" '$(MSBuildRuntimeType)' != 'Core' ">net461\</CSharpEToolsSubPath>
    <CSharpEAssemblyExtension Condition=" '$(MSBuildRuntimeType)' == 'Core' ">dll</CSharpEAssemblyExtension>
    <CSharpEAssemblyExtension Condition=" '$(MSBuildRuntimeType)' != 'Core' ">exe</CSharpEAssemblyExtension>
  </PropertyGroup>
</Project>
